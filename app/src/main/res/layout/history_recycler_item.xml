<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_header_text_size"
            tools:text="Luka"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="@dimen/text_size_07"
                tools:text="2021-07-01"/>

            <TextView
                android:id="@+id/movie_look_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="@dimen/text_size_07"
                tools:text="23.08.2021 17:04"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ImageViewPopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_4_dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/padding_0"
                android:src="@drawable/star_rate" />

            <TextView
                android:id="@+id/movie_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_07"
                tools:text="7.8"/>
        </LinearLayout>

        <TextView
            android:id="@+id/movie_history_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_40_dp"
            android:textSize="@dimen/text_size_07"
            tools:text="Example note"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
